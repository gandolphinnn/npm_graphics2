{
	"compilerOptions": {
		"target": "ES2015",
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "dist",
		"noImplicitAny": true,
		"declaration": true,
		"moduleResolution": "Node",
		"baseUrl": "./",
		"paths": {
			"*": ["node_modules"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}